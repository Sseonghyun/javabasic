package Polymorphism.game;

public class Dragon extends Monster{
	private int hp;
	private int atk;
	private int df;

	public Dragon(int hp, int atk, int df) {
		super(hp,atk,df);
	}
	public void Battle(int uAtk) {
		this.hp = (this.hp + this.df) - uAtk;
		if(this.hp <= 0) {
			System.out.println("이 드래곤은 이미 죽었습니다.");
		}
	}
	public int getAtk() {
		return this.atk;
	}
	public int getHp() {
		return this.hp;
	}
}
